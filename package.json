{
  "name": "question-bank-app",
  "version": "1.0.0",
  "description": "A question bank application designed for the 11+ entrance exams.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "test": "jest",
    "mock-server": "node backend/mockServer.js",
    "frontend": "cd frontend && npm start",
    "create-indexes": "node scripts/create-indexes.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "deploy:staging": "heroku git:remote -a question-bank-staging && git push heroku develop:main",
    "deploy:production": "heroku git:remote -a question-bank-production && git push heroku main",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "setup:machine": "node scripts/detect-machine.js",
    "dev:mac": "node scripts/detect-machine.js && npm run dev:mobile",
    "dev:laptop": "node scripts/detect-machine.js && npm run dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "security-audit": "npm audit --production",
    "prepare-release": "npm run lint && npm run test && npm run build:all && npm run security-audit",
    "mobile-test": "node scripts/mobile-testing.js",
    "dev:mobile": "concurrently \"npm run dev\" \"cd frontend && npm run dev\" \"npm run mobile-test\"",
    "ngrok": "node scripts/ngrok-setup.js",
    "responsive-test": "node scripts/responsive-test.js",
    "type-check": "ts-node scripts/type-check.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.67.1",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.8.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.3",
    "chart.js": "^4.4.8",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.5.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.13",
    "openai": "^4.86.1",
    "rate-limiter-flexible": "^5.0.5",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "@types/nodemailer": "^6.4.17",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^27.0.6",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
